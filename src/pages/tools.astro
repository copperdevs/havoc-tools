---
import { readAll } from "../lib/markdoc/read";
import { tool } from "../lib/markdoc/frontmatter.schema";
import PageLayout from "../layouts/PageLayout.astro";
import PageMeta from "../components/PageMeta.astro";
import ExternalLinkIcon from "../components/ui/icons/external-link.astro";
import { SITE_TITLE } from "../config";

const tools = await readAll({
  directory: "tools",
  frontmatterSchema: tool,
});

const sortedTools = tools
  .filter((p) => p.frontmatter.draft !== true)
  .sort(
    (a, b) =>
      new Date(b.frontmatter.date).valueOf() -
      new Date(a.frontmatter.date).valueOf()
  );
---

<PageLayout>
  <PageMeta title={`Tools | ${SITE_TITLE}`} slot="meta" />
  <section slot="main">
    <ul>
      {
        sortedTools.map((tool) => {
          const formattedDate = new Date(
          tool.frontmatter.date
          ).toLocaleDateString("en-us", {
            year: "numeric",
            month: "short",
            day: "numeric",
          });
          return (
            <li class="tool">
              <div class="title">
                <a href={tool.frontmatter.url}>
                  <span>{tool.frontmatter.title}</span>
                </a>
              </div>
              <div class="publish-date">
                <time datetime={tool.frontmatter.date.toISOString()}>
                  {formattedDate}
                </time>
              </div>
            </li>
          );
        })
      }
    </ul>
  </section>
</PageLayout>

<style>
  ul {
    list-style-type: none;
    padding: unset;
  }

  .tool {
    display: grid;
    grid-template-columns: 1fr;
    line-height: 1.5;
  }

  @media (min-width: 640px) {
    .tool {
      grid-template-columns: 1fr auto;
      /* gap: 2rem; */
    }
  }

  .project + .tool {
    padding-top: 0.5rem;
  }

  .title a {
    color: var(--text);
    border-bottom: none;
  }

  .title a:hover {
    color: var(--text-link);
  }

  .icon-realign {
    margin-bottom: -1.5px;
    margin-left: 2px;
  }

  .publish-date {
    color: var(--text-muted);
    font-size: 0.875rem;
    font-style: italic;
  }
</style>
