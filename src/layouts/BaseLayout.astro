---
interface Props {
  title: string;
}

const { title } = Astro.props;

import { ViewTransitions } from "astro:transitions";
import "../../common-astro/style/style.css";
import FontAwesome from "../../common-astro/components/FontAwesome.astro";
import LinkRedirect from "../../common-astro/components/LinkRedirect.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Online tools for the fps game 'Havoc'" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | havoc tools</title>
    <ViewTransitions />
    <FontAwesome />
  </head>
  <body>
    <main>
      <LinkRedirect
        badUrls={["havoc-tools.pages.dev"]}
        targetUrl="havoc-tools.copperdevs.com"
      />
      <slot />
    </main>
  </body>
</html>
